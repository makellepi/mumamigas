<div class="follow-option" id="follow-form">
  <% if current_user.following?(@user) %>
    <%= link_to "Unfollow", unfollow_user_path(@user) %>
    <%#= button_to "Following", {action: 'unfollow', id: @user.id}, method: 'post', class: 'valid-option', remote: true %>
  <% elsif current_user != @user %>
    <%= link_to "Follow", follow_user_path(@user) %>
    <%#= button_to "Follow", {action: 'follow', id: @user.id}, method: 'post', class: 'valid-option', remote: true %>
  <% end %>
</div>
