<h1> Send your friend request to <%= @match.user.first_name %> </h1>

<div class="col-sm-4 col-sm-offset-4">
  <div class="messagebox">
    <%= simple_form_for [@match, @message] do |f| %>
      <%= f.input :content , label: "Your message:", placeholder: "Tell your Mumamiga why you are excited to connect with her."%>
      <%= f.button :submit, "Send", class: "btn btn-block" %>
    <% end %>
  </div>
</div>




