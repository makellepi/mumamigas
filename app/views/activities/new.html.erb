<div class="col-sm-4 col-sm-offset-4">
<div class="form-inputs">
  <%= simple_form_for @activity do |f| %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :category%>
    <%= f.input :time %>
    <%= f.input :date %>
    <%= f.input :image %>
    <%= f.input :image_cache, as: :hidden %>
    <%= f.button :submit %>
  <% end %>
</div>
</div>
