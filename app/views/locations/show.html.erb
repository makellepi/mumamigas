<div class="container" style="color: grey;">
  <div class="location-title-wrapper">
    <h1>Select your location </h1>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="row">
          <div class="form-group">
            <%= form_tag locations_path(@user), method: :get do %>
            <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Please choose your city..."
            %>
          <% end %>
          </div>
        </div>
        <div class="col-xs-3">
          <%= submit_tag 'Search', name: nil, class: "btn btn-search btn-block" %>
        </div>
        <% end %>
      </div>
  </div>
    </div>
  </div>
</div>
