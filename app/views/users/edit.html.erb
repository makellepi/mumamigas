<div class="col-sm-4 col-sm-offset-4">
<h2>Edit profile</h2>

<%= simple_form_for [@user] do |f| %>
   <div class="form-inputs">
    <%= f.input :first_name, autofocus: true %>
    <%= f.input :second_name, autofocus: true %>
    <%= f.input :age, autofocus: true %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :children, autofocus: true %>
    <%= f.input :children_age, autofocus: true %>
    <%= f.input :bio, autofocus: true %>
    <%= f.input :language, autofocus: true %>
    <%= f.input :work_status, autofocus: true %>
   </div>

  <div class="form-actions">
    <%= f.button :submit, "Update info", class: "btn btn-block" %>
  </div>
<% end %>

</div>
