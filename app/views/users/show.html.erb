<div class="Username">
  <h1><%= @user.first_name %>Â´s Profile</h1>
</div>

<div class="container">
  <div class="clas row">
   <div class="col-left">
    <div class="user-profile-photo">
      <%= cl_image_tag @user.photo, height: 250, width: 250, crop: :fill, radius: 0 %>
    </div>

    <br>
    <div class="button" role="group">
      <%= link_to "Back", :back, class: "btn btn-default" %>
    </div>
    </div>


    <div class="col-right">
      <h3> Bio </h3>
      <div class="user-age">
       <p> <%= @user.age %> years old</p>
     </div>
     <div class="user-children">
       <p> <%= @user.first_name %> has <%= @user.children %> children and they are <%= @user.children_age %> years old. </p>
     </div>
     <div class="user-children-age">
       <p> <%= @user.first_name %> speaks <%= @user.language %>.</p>
     </div>
     <p> A little bit about yourself: "<%= @user.bio %>" </p>
     <div class="btn-group" role="group">

      <div class="user-interests">
        <% @user.interests.each do |interest| %>
          <% if @user.interests.any? %>
            <p> These are your interests: <%= interest.category %></p>
          <% else %>
            <p> No interests defined yet.. </p>
          <% end %>
       <% end %>
     </div>

     <div class="btn-group" role="group">

      <% if @user == current_user %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Complete your profile for better matches", edit_user_interest_path, class: "btn-btn-default" %>
      <% end %>

    </div>
   </div>

 </div>

</div>


</div>

