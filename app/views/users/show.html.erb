<div class="container">
  <div class="row">
    <div class="profile-box">

        <div class="user-profile-photo">
          <%= cl_image_tag @user.photo, class:"avatar-large" %>
        </div>

        <div class="float-button hidden-sm hidden-md hidden-lg">
          <%= link_to "Back", friends_path %>
        </div>

        <h3> Bio </h3>
        <div class="user-age">
            <% if @user.age.nil? && current_user == @user %>
              <p> Please complete your age </p>
              <% else %>
              <p><%= @user.age %> years old</p>
            <% end %>
        </div>
        <div class="user-children">
          <% if @user.age.nil? && current_user == @user %>
            <p> Please tell us how many children you have </p>
           <% else %>
            <p> <%= @user.first_name %> has <%= @user.children %> children and
            they are <%= @user.children_age %> years old. </p>
           <% end %>
         </div>
         <div class="user-children-age">
          <% if
            @user.language.nil? && current_user == @user %>
            <p> Please share what languages you speak </p>
           <% else %>
            <p> <%= @user.first_name %> speaks <%= @user.language %>.</p>
          <% end %>
         </div>

         <div class="user-location">
          <% if @user.city.nil? && current_user == @user %>
            <p> Please tell us where you live </p>
          <% else %>
           <p> <%= @user.first_name %> lives in <%= @user.city %></p>
          <% end %>
         </div>


           <p> A little bit about <%= @user.first_name %>: <%= @user.bio %> </p>

         <div class="btn-group" role="group">

         <div class="user-interests">
         <% if @user.interest_category.nil? && current_user == @user %>
            <p> Share your interests </p>
         <% else %>

        <%= "Preferred interests:" %>
        <% @user.interest_category.gsub(/[~;:"'<>?#\s\]\\\[]+/, '').split(",").each do |interest| %>
          <%= interest %>
        <% end %>
            <!-- <p> Preferred interests: <%#= @user.interest_category.gsub(/[~;:"'<>?#\s]+/, '')%></p> -->
        <% end %>
         </div>

         <div class="btn-group" role="group">

          <% if @user == current_user %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Complete your profile for better matches", edit_user_path, class: "btn-btn-default" %>
          <% else %>
              <% if @user.match_ids.blank? %>
               <%= render 'follows/form' %>
              <% else  %>
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Send message", new_match_message_path(@user.match_ids), class: "btn-btn-default" %>
              <% end %>
          <% end %>
        </div>
        </div>

    </div>
 </div>
</div>

