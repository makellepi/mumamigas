<div class="Username">
  <h1><%= @user.first_name %>Â´s Profile</h1>
</div>

<div class="container">
  <div class="clas row">
   <div class="col-left">
    <div class="user-profile-photo">
      <%= cl_image_tag @user.photo, height: 250, width: 250, crop: :fill, radius: 0 %>
    </div>

    <br>
    <div class="button" role="group">
      <%= link_to "Back", :back, class: "btn btn-default" %>
    </div>
    </div>


    <div class="col-right">
      <h3> Bio </h3>
      <div class="user-age">
        <% if @user.age.nil? %>
          <p> Please complete your age </p>
          <% else %>
          <p><%= @user.age %> years old</p>
        <% end %>
     </div>
     <div class="user-children">
      <% if @user.age.nil? && current_user == @user %>
        <p> Please tell us how many children you have </p>
       <% else %>
        <p> <%= @user.first_name %> has <%= @user.children %> children and
        they are <%= @user.children_age %> years old. </p>
       <% end %>
     </div>
     <div class="user-children-age">
      <% if @user.language.empty? && current_user == @user %>
        <p> Please share what languages you speak </p>
       <% else %>
        <p> <%= @user.first_name %> speaks <%= @user.language %>.</p>
      <% end %>
     </div>

     <div class="user-location">
      <% if @user.city.empty? && current_user == @user %>
        <p> Please tell us where you live </p>
      <% else %>
       <p> <%= @user.first_name %> lives in <%= @user.city %></p>
      <% end %>
     </div>


       <p> A little bit about <%= @user.first_name %>: <%= @user.bio %> </p>

     <div class="btn-group" role="group">

     <div class="user-interests">
     <% if @user.interest_category.empty? && current_user == @user %>
        <p> Share your interests </p>
     <% else %>
        <p> These are <%= @user.first_name %> interests: <%= @user.interest_category %></p>
      <% end %>
     </div>

     <div class="btn-group" role="group">

      <% if @user == current_user %>
      <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= link_to "Complete your profile for better matches", edit_user_path, class: "btn-btn-default" %>
      <% end %>

    </div>
   </div>

 </div>

</div>


</div>

