<div class="container" style="color: grey;">
  <div class="search-title-wrapper">
    <h1> Start connecting with other mums...</h1>
  </div>

  <br>
<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <%=form_tag users_path, method: :get do %>
    <div class="form-group">
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search by city or interest..." %>
    <% end %>
    <br>
    </div>
  </div>

  <% unless @user.city.nil? || @local_mums.nil? %>
  <div id="search-container">
    <div class="class row">
    <div class="col-sm-6 col-sm-offset-2">
    <h4> Mums nearby or with similar interests:</h4>
    <% @local_mums.each do |local_mum| %>
     <% unless local_mum == current_user %>
      <%= link_to user_path(local_mum) do %>
      <div class="card-user">
        <%= local_mum.first_name %>
        <div class="picture">
           <% if local_mum.photo? %>
              <div class="user-profile-photo">
                <%= image_tag local_mum.photo, width: 140, height: 140, radius:5 %>
              </div>
            <% else %>
            <div class="empty-picture"">
              <p>-- No picture --</p>
            </div>
            <% end %>
          </div>
          <div class="class interest">
            <p><i class="glyphicon glyphicon-heart"></i> <%= local_mum.interest_category %></p>
          </div>
          <div class="class interest">
            <p><i class="glyphicon glyphicon-map-marker"></i> <%= local_mum.city %></p>
           </div>
      <% end %>
      </div>
    <% end %>
    <% end %>
    </div>
    </div>
  </div>
  <% end %>


  <% unless @user.interest_category.blank? || @same_hobbies.blank? %>
  <div id="search-container">
    <div class="class row">
    <div class="col-xs-12 col-sm-6">
    <% @same_hobbies.each do |hobby| %>
    <% unless hobby == current_user %>
      <%= link_to user_path(hobby) do %>
      <div class="card-user">
        <%= hobby.first_name %>
        <div class="picture">
           <% if hobby.photo? %>
              <div class="user-profile-photo">
                <%= image_tag hobby.photo, width: 140, height: 140, radius:5 %>
              </div>
            <% else %>
            <div class="empty-picture"">
              <p>-- No picture --</p>
            </div>
            <% end %>
          </div>
          <div class="class interest">
            <p><i class="glyphicon glyphicon-heart"></i> <%= hobby.interest_category %></p>
          </div>
          <div class="class interest">
            <p><i class="glyphicon glyphicon-map-marker"></i> <%= hobby.city %></p>
           </div>
      <% end %>
      <% end %>
      </div>
    <% end %>
    </div>
    </div>
  </div>
  <% end %>



</div>
</div>





