<div class="container" style="color: grey;">
  <div class="location-title-wrapper">
    <h1> Start connecting with other mums </h1>
  </div>

  <br>
  <div class="row">
      <%=form_tag search_path, method: :get do %>
      <div class="form-group">
        <%= text_field_tag :query, params[:search], class: "form-control", placeholder: "Please write your search query..." %>
        <%= submit_tag 'Search', name: nil, class: "btn btn-search btn-block" %>
      </div>
      </div>
      <% end %>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="row">
        <%= form_tag locations_path, method: :get do %>
        <%= submit_tag 'Search by location', name: nil, class: "btn btn-search btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
  <br>
  <p> or </p>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="row">
        <%= form_tag interests_path, method: :get do %>
        <%= submit_tag 'Search by interest', name: nil, class: "btn btn-search btn-block" %>
        <% end %>
      </div>
    </div>
    <% if params[:query].present? %>
    <%= link_to "clear" %>
    <% end %>
  </div>
</div>




