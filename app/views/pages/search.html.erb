<div class="container" style="color: grey;">
  <div class="location-title-wrapper">
    <h1>Select your location </h1>
  </div>

  <br>
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div class="row">
        <%= form_tag search_path, method: :get do %>
        <div class="col-xs-9">
          <div class="form-group">
            <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "city or country and find your nearby mums..." %>
          </div>
        </div>
        <div class="col-xs-3">
          <%= submit_tag 'Search', name: nil, class: "btn btn-search btn-block" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <div id="locations">
        <% @locations.each do |location| %>
          <h4><%= location.city %></h4>
          <p><%= location.country %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

