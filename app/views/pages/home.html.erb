
<% gradient_str = "-webkit-linear-gradient(top, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0) 80%, rgba(0, 0, 0, 1) 100%)"  %>


<div class="container">
<div class="banner">
  <div class="banner-content">
    <%=image_tag("background.jpg", style: "opacity: 0.6") %>
    <div class="centered">
    <h1>Mumamigas</h1>
    <p>Meet other mums!</p>
     <%= link_to "Start now", search_path, class: "btn btn-danger btn-lg" %>
    </div>
  </div>
<div class="cards-container">
    <div class="row">
        <div class="col-xs-12 col-sm-4">
            <div class="home-card">
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <br>
             <h4> Connect with other mums</h4>
              <div class="cardhome-grow">
               <p>You can chat with mums all over the world, or just in your neighbourhood, you choose.
               </p>
              </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4">
            <div class="home-card">
              <span class="glyphicon glyphicon-tags" aria-hidden="true"></span>
              <br>
             <h4>Find good deals</h4>
              <div class="cardhome-grow">
              <p>Find good deals on opportunities for second hand products for your new baby.</p>
              </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-4">
            <div class="home-card">
              <span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>
              <br>
             <h4>Join activities</h4>
              <div class="cardhome-grow">
              <p>Attend or organize local meetups with other mums. Discover mums-kids friendly places around you.</p>
              </div>
            </div>
        </div>
    </div>
 </div>
</div>

</div>

