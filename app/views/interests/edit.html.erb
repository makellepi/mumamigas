<div class="col-sm-4 col-sm-offset-4">
<h2>Edit profile</h2>

<%= simple_form_for [ @interest ] do |f| %>
    <strong>Interests:</strong>
    <%= f.collection_check_boxes :interest_ids, Interest.all, :id, :category do |cb| %>
    <%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box( class: "checkbox") + cb.text} %>
    <% end %>
    <br>
    <%= link_to 'Add a new interest', new_user_interest_path(@user) %>
    <br>

    <%= f.input :work_status,label: 'Working full time?', autofocus: true %>
   </div>

  <div class="form-actions">
    <%= f.button :submit, "Update info", class: "btn btn-block" %>
  </div>
<% end %>

</div>


