<div class="cascading-card">
  <a id="cascading-card-link" href=""></a>
  <div class="cascading-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= cl_image_path @user.photo, crop: :fill %>')">
  </div>
  <div class="cascading-card-body">
    <div class="cascading-card-name">
      <%= user.first_name+" "+user.second_name %>
    </div>
    <div class="cascading-card-city">
      <%= user.city %>
    </div>
    <div class="cascading-card-icons">
      <div class="card-icons-children-count">
        <%= image_tag("baby-icon.png", size: "30x30") %>
        <%= "X "+user.children.to_s %>
      </div>
      <% if user.pregnant %>
          <div class="card-icons-pregnancy-months">
            <%= image_tag("pregnant-icon.png", size: "30x30") %>
            <% months = (Date.today - user.pregnantdue) %>
          </div>
      <% end %>
      <%# raise %>
      <div class="card-icons-shopping-items">

      </div>
    </div>
  </div>
</div>
