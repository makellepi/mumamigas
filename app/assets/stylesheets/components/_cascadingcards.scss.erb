.flex-center {
  display: flex;
  justify-content: space-around;
}

.cascading-card {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
  background-color: whitesmoke;
  border: none;
  width: 250px;
}

#cascading-card-link {
  height: 100%;
  width: 100%;
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 1;
}

// IMAGE
.cascading-card-image {
  width: 100%;
  height: 170px;
  background-size: cover;
  z-index: 1;
  border-radius: 4px;
  background-repeat: no-repeat;
  background-position: center;
  box-shadow: 0 8px 17px 0 rgba(0,0,0,.2), 0 6px 20px 0 rgba(0,0,0,.19);
}

.cascading-card-image-mask {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 170px;
  opacity: 0;
  transition: all 0.2s linear;
}

.cascading-card-image-mask:hover {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 100%;
  height: 170px;
  opacity: 1;
  background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.5));
  font-size: 13px;
  color: whitesmoke;
  text-align: center;
  vertical-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

// BODY
.cascading-card-body {
  width: 91%;
  background-color: white;
  box-shadow: 0 2px 5px 0 rgba(0,0,0,.16), 0 2px 10px 0 rgba(0,0,0,.12);
  z-index: 0;
  height: 137px;
  position: relative;
}


.cascading-card-name {
  font-weight: bold;
  color: black;
  font-size: 18px;
  margin-top: 10px;
}

.cascading-card-city {
  padding: 5px;
  color: #2bbcec;
  font-weight: bold;
  font-size: 14px;
}

.cascading-card-bio {
  padding: 15px;
  font-size: 12px;
}

// ICONS
.cascading-card-icons {
  display: flex;
  justify-content: center;
  padding: 10px;
  font-size: 13px;
  position: absolute;
  bottom: 10px;
  width: 100%;
}

